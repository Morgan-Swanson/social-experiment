# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/social_experiment"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Storage (MinIO for local, S3 for cloud)
STORAGE_PROVIDER="minio"
STORAGE_ENDPOINT="http://localhost:9000"
STORAGE_REGION="us-east-1"
STORAGE_ACCESS_KEY="minioadmin"
STORAGE_SECRET_KEY="minioadmin"
STORAGE_BUCKET="social-experiment"

# For cloud deployment, use:
# STORAGE_PROVIDER="s3"
# STORAGE_ENDPOINT="" (leave empty for AWS S3)
# STORAGE_ACCESS_KEY="your-aws-access-key"
# STORAGE_SECRET_KEY="your-aws-secret-key"